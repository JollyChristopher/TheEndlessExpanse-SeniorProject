package halemaster.ee.world.terrain.tile;

import halemaster.ee.world.terrain.structure.Structure;

/**
 * @name BiomeGeneration
 * 
 * @version 0.0.0
 * 
 * @date Jan 30, 2014
 */
public class BiomeGeneration 
{
  Tile[] tiles;
  int[] base;
  Structure[] structures = null;
  Structure[] city = null;
  
  public BiomeGeneration ()
  {
    this (null, null);
  }
  
  public BiomeGeneration (Tile[] tiles, int[] base)
  {
    this.tiles = tiles;
    this.base = base;
  }

  public Tile[] getTiles ()
  {
    return tiles;
  }

  public void setTiles (Tile[] tiles)
  {
    this.tiles = tiles;
  }

  public int[] getBase ()
  {
    return base;
  }

  public void setBase (int[] base)
  {
    this.base = base;
  }

  public Structure[] getStructures ()
  {
    return structures;
  }

  public void setStructures (Structure[] structures)
  {
    this.structures = structures;
  }

  public Structure[] getCity ()
  {
    return city;
  }

  public void setCity (Structure[] city)
  {
    this.city = city;
  }
}
